{
  "version": "1.0",
  "mocks": [
    {
      "id": "ndjson-log-stream",
      "name": "NDJSON Log Stream",
      "description": "Stream logs as newline-delimited JSON (NDJSON format)",
      "matcher": {
        "method": "GET",
        "path": "/api/logs/stream"
      },
      "chunked": {
        "format": "ndjson",
        "ndjsonItems": [
          { "timestamp": "$timestamp", "level": "info", "message": "Application started", "service": "api" },
          { "timestamp": "$timestamp", "level": "debug", "message": "Database connection established", "service": "db" },
          { "timestamp": "$timestamp", "level": "info", "message": "Request received", "service": "api", "requestId": "$uuid" },
          { "timestamp": "$timestamp", "level": "warn", "message": "High memory usage detected", "service": "monitor", "value": "$random:80:95" },
          { "timestamp": "$timestamp", "level": "info", "message": "Request completed", "service": "api", "duration": "$random:10:200" }
        ],
        "chunkDelay": 200
      },
      "enabled": true
    }
  ]
}
