{
  "version": "1.0",
  "mocks": [
    {
      "id": "stock-ticker",
      "name": "Stock Price Ticker",
      "description": "Real-time stock price updates with random values",
      "matcher": {
        "method": "GET",
        "path": "/api/stocks/stream"
      },
      "sse": {
        "template": "notification-stream",
        "templateParams": {
          "notifications": [
            { "type": "price", "symbol": "AAPL", "price": "$random:100:200", "change": "$random:-5:5" },
            { "type": "price", "symbol": "GOOGL", "price": "$random:2800:3200", "change": "$random:-20:20" },
            { "type": "price", "symbol": "MSFT", "price": "$random:380:420", "change": "$random:-10:10" },
            { "type": "price", "symbol": "AMZN", "price": "$random:170:190", "change": "$random:-8:8" }
          ],
          "includeTimestamp": true,
          "includeId": true,
          "eventType": "price-update"
        },
        "timing": {
          "randomDelay": { "min": 100, "max": 500 }
        },
        "lifecycle": {
          "duration": 60,
          "keepaliveInterval": 15
        },
        "rateLimit": {
          "eventsPerSecond": 10,
          "burstSize": 5
        }
      },
      "enabled": true
    }
  ]
}
