{
  "version": "1.0",
  "mocks": [
    {
      "id": "mqtt-test",
      "name": "MQTT Test Broker",
      "mqtt": {
        "port": 1883,
        "topics": [
          {
            "topic": "test/topic",
            "qos": 0,
            "messages": [
              {
                "payload": "{\"message\": \"Hello from mockd!\"}",
                "delay": "1s",
                "repeat": true,
                "interval": "5s"
              }
            ]
          },
          {
            "topic": "sensors/temperature",
            "qos": 1,
            "onPublish": {
              "response": {
                "payload": "{\"status\": \"received\", \"ack\": true}"
              }
            }
          }
        ]
      }
    }
  ]
}
